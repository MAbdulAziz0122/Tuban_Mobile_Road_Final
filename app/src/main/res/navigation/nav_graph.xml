<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.jalan_tuban_mobile.ui.FirstFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.jalan_tuban_mobile.ui.SecondFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <argument
            android:name="road"
            app:argType="com.example.jalan_tuban_mobile.model.Road"
            app:nullable="true"/>
    </fragment>
    <fragment
        android:id="@+id/profile_settings"
        android:name="com.example.jalan_tuban_mobile.menu.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@+id/LoginFragment"/>

    </fragment>

    <fragment
        android:id="@+id/about_settings"
        android:name="com.example.jalan_tuban_mobile.menu.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about"/>
</navigation>