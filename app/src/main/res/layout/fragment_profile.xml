<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".menu.ProfileFragment">

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/user"
        android:contentDescription="Foto Profil"
        />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImageView"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTextView"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:id="@+id/editProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailTextView"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/editProfileTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="    Edit Profil"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            android:drawableLeft="@drawable/menu_edit"
            />

        <TextView
            android:id="@+id/editPasswordTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="    Password"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            android:drawableLeft="@drawable/menu_password"
            />

        <TextView
            android:id="@+id/privacyPolicyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="    Kebijakan Privasi"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            android:drawableLeft="@drawable/menu_privacy"
            />

        <TextView
            android:id="@+id/logoutTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="    Keluar"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            android:drawableLeft="@drawable/menu_logout"
            />
    </LinearLayout>

</RelativeLayout>
